

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cover"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.asif.cuny.RegisterActivity">


    <LinearLayout
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:background="@color/_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:padding="4dp"
            android:text="@string/_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/emailet"
            android:background="@drawable/round"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <TextView
            android:padding="4dp"
            android:layout_marginTop="10dp"
            android:text="@string/_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/full_name"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            />

        <TextView
            android:padding="4dp"
            android:layout_marginTop="10dp"
            android:text="@string/_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/pass"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            />


        <TextView
            android:padding="4dp"
            android:layout_marginTop="10dp"
            android:text="@string/_repassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/re_pass"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            />




        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="4.0dip"
            android:paddingTop="5.0dip"
            android:paddingRight="4.0dip"
            android:paddingBottom="1.0dip"
            android:layout_width="fill_parent" android:layout_height="50dp"
            android:layout_below="@+id/TextView01">

            <ImageView
                android:src="@drawable/login1"
                android:layout_width="0.0dip" android:layout_height="fill_parent"
                android:id="@+id/login"
                android:paddingEnd="20dp"
                android:layout_weight="1.0" />

            <ImageView
                android:id="@+id/register"
                android:layout_width="0.0dip"
                android:paddingEnd="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/register1"
                android:layout_weight="1.0" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>